@using FE_HumanResources.Pages

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
    
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Menu)" >
                <NotAuthorized>
                    Perdón, no estas autorizado/a, para utilizar esta opción. :(
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(Menu)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>

    </Router>
</CascadingAuthenticationState>
